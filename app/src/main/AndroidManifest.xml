<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexu.projet.miashs.nexu">

    <!-- ADD LOCATION ASHLEY -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logopet1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".PageInventaire"></activity>
        <activity android:name=".PageCalendrier"></activity>
        <activity android:name=".PageProgramme"></activity>
        <activity android:name=".PageMap"></activity>
        <activity android:name=".PageObjet"></activity>
        <activity android:name=".PageStatistiques"></activity>
        <activity android:name=".PageCompte"></activity>
        <activity android:name=".PageInformations"></activity>
        <activity android:name=".PageParametresCompte"></activity>
        <activity android:name=".PageCreerProgramme"></activity>
        <activity android:name=".PageCreerAmbiance"></activity>
        <activity android:name=".PageParametresNotications"></activity>
        <activity android:name=".Tracker"></activity>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/logopet1" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <!-- Launcher permet de dire que la page "MainActivity est pas la page d'accueil -->
            </intent-filter>
        </activity>

        <service android:name=".MyFirebase">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCEID_EVENT" />
            </intent-filter>
        </service>
        <service
        android:name=".FirebaseService">
        <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT"/>
        </intent-filter>
    </service>
    </application>

</manifest>